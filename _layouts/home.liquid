---
layout: default
---
      <div class="post">
        <header class="post-header">
          <h1 style="text-align: center;" class="post-title">
            {{ page.page_title }}
          </h1>
          <h4 style="text-align: center;" class="desc">{{ page.page_subtitle }}</h4>
        </header>
<br/><br/>
        <article>
    <!-- News -->
    {% if page.news and site.announcements.enabled %}
<h3>Announcements</h3>
      {% include news.liquid limit=true %}
    {% endif %}


          <div class="clearfix">
            {{ content }}
          </div>
        </article>

</div>
